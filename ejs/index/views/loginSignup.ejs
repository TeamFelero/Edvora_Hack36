<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login / SignUp Flip Card</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
  <style>
    .card {
      backface-visibility: hidden;
      position: absolute;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
      overflow-y: auto;
    }
    .card-container {
      perspective: 1000px;
      width: 400px;
      height: 700px;
    }
    body {
      overflow: hidden;
    }
    /* Hide scrollbar but keep functionality */
    .card::-webkit-scrollbar {
      display: none;
    }
    .card {
      -ms-overflow-style: none;
      scrollbar-width: none;
    }
  </style>
</head>
<body class="min-h-screen bg-gradient-to-br from-gray-900 to-gray-800 flex justify-center items-center p-4">

  <div class="card-container relative">
    <!-- Login Card -->
    <div id="loginCard" class="card bg-white/90 backdrop-blur-sm p-8 rounded-3xl shadow-xl flex flex-col">
      <h2 class="text-3xl font-bold mb-8 text-center text-pink-600">Login</h2>
      <form id="loginForm" action="/submitLog" method="POST" class="space-y-4">
        <div>
          <label for="email" class="block text-sm font-semibold mb-2 text-gray-700">Email</label>
          <input name="email" type="email" id="email" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-transparent transition-all" placeholder="Enter your Email" required />
        </div>
        <div>
          <label for="password" class="block text-sm font-semibold mb-2 text-gray-700">Password</label>
          <input name="password" type="password" id="password" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-transparent transition-all" placeholder="Enter your Password" required />
        </div>
        <div class="text-red-500 text-sm h-4" id="loginError"></div>
        <div class="flex justify-end">
          <a href="/forget" class="text-sm text-pink-600 hover:text-pink-700 hover:underline transition-colors">Forgot Password?</a>
        </div>
        <button type="submit" class="w-full bg-pink-600 hover:bg-pink-700 text-white py-3 rounded-lg font-medium focus:outline-none focus:ring-2 focus:ring-pink-500 focus:ring-offset-2 transition-colors shadow-md hover:shadow-lg">
          Login
        </button>
      </form>
      <div class="flex items-center my-6">
        <div class="flex-grow border-t border-gray-300"></div>
        <span class="mx-4 text-gray-500">OR</span>
        <div class="flex-grow border-t border-gray-300"></div>
      </div>
      <a href="/auth/google" class="w-full bg-gray-700 hover:bg-gray-800 text-white py-3 rounded-lg font-medium focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors shadow-md hover:shadow-lg flex items-center justify-center gap-3">
        <img src="./assets/google.png" alt="Google" class="w-5 h-5" />
        <span>Login with Google</span>
      </a>
      <button id="toSignup" class="mt-6 text-center text-gray-600 hover:text-pink-600 hover:underline transition-colors">
        Don't have an account? <span class="font-semibold">Sign Up</span>
      </button>
    </div>

    <!-- Sign Up Card -->
    <div id="signupCard" class="card bg-white/90 backdrop-blur-sm p-8 rounded-3xl shadow-xl flex flex-col" style="transform: rotateY(180deg);">
      <h2 class="text-3xl font-bold mb-6 text-center text-pink-600">Sign Up</h2>
      <form id="signupForm" action="/submitSig" method="POST" class="space-y-4">
        <div>
          <label class="block text-sm font-semibold mb-2 text-gray-700">UserName</label>
          <input name="username" type="text" id="signupUsername" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-transparent transition-all" placeholder="Enter your UserName" required />
        </div>
        <div>
          <label class="block text-sm font-semibold mb-2 text-gray-700">Email</label>
          <input name="email" type="email" id="signupEmail" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-transparent transition-all" placeholder="Enter your Email" required />
        </div>
        <div>
          <label class="block text-sm font-semibold mb-2 text-gray-700">Password</label>
          <input name="password" type="password" id="signupPassword" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-transparent transition-all" placeholder="Password" required />
        </div>
        <div>
          <label class="block text-sm font-semibold mb-2 text-gray-700">Confirm Password</label>
          <input name="conPassword" type="password" id="signupConPassword" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-transparent transition-all" placeholder="Confirm Password" required />
        </div>
        <div class="text-red-500 text-sm h-4" id="signupError"></div>
        <button type="submit" class="w-full bg-pink-600 hover:bg-pink-700 text-white py-3 rounded-lg font-medium focus:outline-none focus:ring-2 focus:ring-pink-500 focus:ring-offset-2 transition-colors shadow-md hover:shadow-lg">
          Sign Up
        </button>
      </form>
      <div class="flex items-center my-6">
        <div class="flex-grow border-t border-gray-300"></div>
        <span class="mx-4 text-gray-500">OR</span>
        <div class="flex-grow border-t border-gray-300"></div>
      </div>
      <a href="/auth/google" class="w-full bg-gray-700 hover:bg-gray-800 text-white py-3 rounded-lg font-medium focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors shadow-md hover:shadow-lg flex items-center justify-center gap-3">
        <img src="./assets/google.png" alt="Google" class="w-5 h-5" />
        <span>Login with Google</span>
      </a>
      <button id="toLogin" class="mt-6 text-center text-gray-600 hover:text-pink-600 hover:underline transition-colors">
        Already have an account? <span class="font-semibold">Login</span>
      </button>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const loginCard = document.getElementById('loginCard');
      const signupCard = document.getElementById('signupCard');
      const toSignup = document.getElementById('toSignup');
      const toLogin = document.getElementById('toLogin');

      // Initialize the cards with proper rotation
      gsap.set(loginCard, { rotateY: 0 });
      gsap.set(signupCard, { rotateY: 180 });

      let isFlipped = false;

      function flipCard() {
        isFlipped = !isFlipped;

        gsap.to(loginCard, {
          rotateY: isFlipped ? -180 : 0,
          duration: 0.6,
          ease: 'power2.inOut'
        });

        gsap.to(signupCard, {
          rotateY: isFlipped ? 0 : 180,
          duration: 0.6,
          ease: 'power2.inOut'
        });
      }

      toSignup.addEventListener('click', flipCard);
      toLogin.addEventListener('click', flipCard);

      // Error handling for login
      document.getElementById('loginForm').addEventListener('submit', function (e) {
        const email = document.getElementById('email').value;
        const password = document.getElementById('password').value;
        if (!email || !password) {
          e.preventDefault();
          document.getElementById('loginError').textContent = '⚠️ Please enter both email and password.';
        }
      });

      // Error handling for signup
      document.getElementById('signupForm').addEventListener('submit', function (e) {
        const username = document.getElementById('signupUsername').value;
        const email = document.getElementById('signupEmail').value;
        const password = document.getElementById('signupPassword').value;
        const conPassword = document.getElementById('signupConPassword').value;

        if (!username || !email || !password || !conPassword) {
          e.preventDefault();
          document.getElementById('signupError').textContent = '⚠️ Please fill in all fields.';
        } else if (password !== conPassword) {
          e.preventDefault();
          document.getElementById('signupError').textContent = '!! Passwords do not match.';
        } else if (password.length < 6) {
          e.preventDefault();
          document.getElementById('signupError').textContent = '!! Password must be at least 6 characters long.';
        }
      });
    });
  </script> 

</body>
</html>